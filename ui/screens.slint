                        }
                    }

                    Text {
                        text: "Status";
                        font-size: 14px;
                        font-weight: 500;
                        color: #9E9E9E;
                    }
                    
                    Rectangle {
                        background: #2A2A2A;
                        border-radius: 12px;
                        
                        VerticalLayout {
                            padding: 12px;
                            spacing: 12px;
                            
                            HorizontalLayout {
                                alignment: space-between;
                                
                                Text {
                                    text: "Status";
                                    font-size: 14px;
                                    color: #E0E0E0;
                                }
                                
                                StatusIndicator {
                                    level: StatusLevel.ok;
                                    label: data.cooking-status;
                                }
                            }
                            HorizontalLayout {
                                alignment: space-between;
                                
                                Text {
                                    text: "Basket";
                                    font-size: 14px;
                                    color: #E0E0E0;
                                }
                                
                                StatusIndicator {
                                    level: StatusLevel.ok;
                                    label: data.basket-status;
                                }
