export component ControlScreen inherits Rectangle {
    in-out property <AppData> data;
    
    callback target-changed(float);
    callback mode-changed(string);
    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "Manual Control";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            VerticalLayout {
                padding: 24px;
                spacing: 32px;
                alignment: center;
                
                VerticalLayout {
                    spacing: 8px;
                    alignment: center;
                    
                    Text {
                        text: "Current Temperature";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    HorizontalLayout {
                        alignment: center;
                        spacing: 4px;
                        
                        Text {
                            text: data.current-temp;
                            font-size: 64px;
                            font-weight: 300;
                            color: white;
                        }
                        
                        Text {
                            text: "°F";
                            font-size: 24px;
                            color: #9E9E9E;
                            vertical-alignment: bottom;
                        }
                    }
                }
                
                Rectangle {
                    height: 1px;
                    background: #424242;
                }
                
                VerticalLayout {
                    spacing: 16px;
                    alignment: center;
                    
                    Text {
                        text: "Set Temperature";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    ValueStepper {
                        value <=> data.target-temp;
                        min: 180;
                        max: 400;
                        step: 5;
                        unit: "°F";
                        
                        changed(val) => { target-changed(val); }
                    }
                }

                HorizontalLayout {
                    alignment: center;
                    spacing: 8px;
                    
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "air_fry" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("air_fry"); }
                        }
                        
                        Text {
                            text: "Air Fry";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "bake" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("bake"); }
                        }
                        
                        Text {
                            text: "Bake";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "roast" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("roast"); }
                        }
                        
                        Text {
                            text: "Roast";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "reheat" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("reheat"); }
                        }
                        
                        Text {
                            text: "Reheat";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
        }
    }
}

